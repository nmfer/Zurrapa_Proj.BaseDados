{
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Order",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "property": "id_order",
                      "title": "ID Pedido"
                    },
                    {
                      "filterProperty": "Bar.address",
                      "groupProperty": "Bar.address",
                      "property": "id_bar",
                      "sortProperty": "Bar.address",
                      "template": "${data.Bar?.address}",
                      "title": "Bar"
                    },
                    {
                      "filterProperty": "Employee.name",
                      "groupProperty": "Employee.name",
                      "property": "id_num",
                      "sortProperty": "Employee.name",
                      "template": "${data.Employee?.name}",
                      "title": "Empregado"
                    },
                    {
                      "property": "table_number",
                      "title": "Mesa"
                    },
                    {
                      "property": "total_price",
                      "title": "Pre√ßo"
                    },
                    {
                      "property": "order_status",
                      "title": "Estado"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Order",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "sql_project_final.deleteOrder",
                                "parameters": [
                                  {
                                    "name": "id_order",
                                    "value": "${data.id_order}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          },
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        }
                      ],
                      "textAlign": "center",
                      "width": "70px"
                    }
                  ],
                  "count": "${getOrdersCount}",
                  "data": "${getOrdersResult}",
                  "events": {
                    "loadData": [
                      {
                        "error": [
                          {
                            "detail": "Unable to load Orders",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "sql_project_final.getOrders",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getOrdersResult",
                            "type": "set",
                            "value": "${result.Value.AsODataEnumerable()}",
                            "valueType": "IEnumerable<Caixa.Models.SqlProjectFinal.Order>"
                          },
                          {
                            "name": "getOrdersCount",
                            "type": "set",
                            "value": "${result.Count}",
                            "valueType": "int"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "id_order",
                            "value": "${event.id_order}"
                          }
                        ],
                        "path": "edit-order",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ],
                        "type": "popup"
                      }
                    ]
                  },
                  "filterMode": "advanced",
                  "itemType": "Caixa.Models.SqlProjectFinal.Order",
                  "name": "grid0",
                  "title": "",
                  "type": "datagrid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": []
  },
  "layout": "Main",
  "name": "Order"
}